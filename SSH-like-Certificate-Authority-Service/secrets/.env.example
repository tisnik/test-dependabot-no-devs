# Static token auth (format: token:principal1,principal2;token2:principal3)
CA_ACCESS_TOKEN=super-secret-token-12345:peter,adam;token2:joe,mary;token3:admin

# Google SSO (required for /auth/google/*)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# App JWT signing (generate for example with: openssl rand -base64 32)
APP_JWT_SECRET=

# Restrict SSO to these email domains only (comma-separated, no @). Empty = reject all.
SSO_ALLOWED_DOMAINS=gmail.com,redhat.com